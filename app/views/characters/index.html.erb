<h1>Listing characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Strength</th>
    <th>Dexterity</th>
    <th>Constitution</th>
    <th>Intelegence</th>
    <th>Wisdom</th>
    <th>Charisma</th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%=h character.name %></td>
    <td><%=h character.strength %></td>
    <td><%=h character.dexterity %></td>
    <td><%=h character.constitution %></td>
    <td><%=h character.intelegence %></td>
    <td><%=h character.wisdom %></td>
    <td><%=h character.charisma %></td>
    <td><%= link_to 'Show', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New character', new_character_path %>